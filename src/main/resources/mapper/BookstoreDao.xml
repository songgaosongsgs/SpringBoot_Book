<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bookstore.work.dao.BookstoreDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.bookstore.work.entity.Bookstore">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="dublisher" property="dublisher" />
        <result column="author" property="author" />
        <result column="isbn" property="isbn" />
        <result column="description" property="description" />
        <result column="picture" property="picture" />
        <result column="status" property="status" />
        <result column="pages" property="pages" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, name,dublisher, author, isbn, description, picture, status, pages, create_time AS createTime, update_time AS updateTime
    </sql>

</mapper>
